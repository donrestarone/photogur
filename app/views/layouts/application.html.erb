<!DOCTYPE html>
<html>
  <head>
    <title>Photogur</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if flash[:error] %>

	  	<div class="flasherror">
	  		<%= flash[:error] %>
	  		
	  	</div>
	<% end %>

	<% if flash[:notice] %>

	  	<div class="positiveflash">
	  		<%= flash[:notice] %>
	  		
	  	</div>
	<% end %> 
	
  	<p>
  		<% if current_user %> 
  		hello <%= current_user.email %> 
  			<p>
  				<%= link_to 'log out', sessions_path, method: :delete %>
  			</p>
  		<% else %> 
  		<p><%= link_to 'New Account', new_users_path %></p>
  		<p><%= link_to 'Login', new_sessions_path %></p>
  		<% end %> 
  	</p>
    <%= yield %>
  </body>
</html>
